<Window x:Class="Task8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task8"
        mc:Ignorable="d"
        Title="MainWindow" Height="510" Width="640" >
    <Window.Resources>
        <DataTemplate x:Key="ProductDataTemplate">
            <Border x:Name="border" Padding="15" BorderThickness="0" CornerRadius="10" Background="CadetBlue">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Width="100" Height="100" Source="{Binding Icon}" />
                    <TextBlock Name="Name" Grid.Row="0" Grid.Column="1" Text="{Binding ProductName}" Grid.ColumnSpan="2" Margin="15" FontSize="14" FontWeight="Bold" Foreground="DarkBlue"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Price}" Margin="15,0,0,0" FontSize="14"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text=" руб." FontSize="14"/>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding ProductType}">
                    <DataTrigger.Value>
                        <local:ProductTypes>Device</local:ProductTypes>
                    </DataTrigger.Value>
                    <Setter TargetName="border" Property="Background" Value="MediumSeaGreen" />
                    <Setter TargetName="Name" Property="Foreground" Value="Brown" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ListBox Name="lstBox" Margin="15" HorizontalContentAlignment="Stretch" Padding="5"
                ItemTemplate="{StaticResource ProductDataTemplate}"
                 ItemsSource="{Binding Products}">
        </ListBox>
    </Grid>
</Window>
