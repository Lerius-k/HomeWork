<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="Простой тесктовый редактор" 
        Height="450" MinHeight="155" 
        Width="800" MinWidth="355"
        WindowStartupLocation="CenterScreen" 
        Closing="Window_Closing"
        Icon="/Picture/Icon.jpg"
        >
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" >
            <Button Name="Open" Content="Открыть файл" Margin ="5,10,10,10" Padding="10,5,10,5" BorderThickness="0" Click="Open_Click"/>
            <Button Name="Save" Content="Сохранить как" Margin ="10" Padding="10,5,10,5" BorderThickness="0" Click="Save_Click"/>
            <Button Name="Info" Content="О программе" Margin ="10" Padding="10,5,10,5" BorderThickness="0" Click="Info_Click" Foreground="Gray"/>
        </StackPanel>
        <TextBox Name="myTextBox"
                 Grid.Row="1" 
                 TextWrapping="Wrap"
                 AcceptsReturn="True"                 
                 AcceptsTab ="True"
                 BorderBrush="Gray"
                 Background="#FFFFF6E7"
                 BorderThickness="1"
                 Margin ="5,0,5,5"
                 Padding="10"
                 VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Stretch" FontFamily="Comic Sans MS" FontSize="14" 
                 TextChanged="myTextBox_TextChanged"/>
        <TextBlock Grid.Row="1"
                   Name="myTextBlock"
                   Text="Введите текст или откройте файл"
                   Margin ="7,0,5,5"
                   Padding="10"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontFamily="Comic Sans MS" 
                   FontSize="14" 
                   Foreground="Gray"
                   Opacity="0.5" MouseEnter="myTextBlock_MouseEnter"
                   
                   />

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готов"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
