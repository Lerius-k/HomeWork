<Window x:Class="Task1_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1_1"
        mc:Ignorable="d"
        Title="Счетчик кликов" Height="280" Width="380">
    <Grid>
        <Button 
            Content="Кликни меня!" 
            VerticalAlignment ="Center" 
            HorizontalAlignment="Center" 
            Margin="0,80,0,0"             
            Width="130"             
            Height="35"
            FontSize="16" 
            BorderThickness="2,2,2,2"
            Click="Button_Click" />
        <TextBlock
            TextWrapping="Wrap" 
            Margin="0,0,0,80" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center">
            <Run x:Name="TextCountClick" 
                Language="ru-ru" 
                Text="0" Foreground="#FF984040" 
                 FontFamily="Bahnschrift SemiLight Condensed" 
                 FontSize="42"/>
        </TextBlock>

    </Grid>
</Window>
