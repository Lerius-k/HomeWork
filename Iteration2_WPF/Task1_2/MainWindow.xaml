<Window x:Class="Task1_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1_2"
        mc:Ignorable="d"
        Title="Светофор" Height="610" Width="270">
    <Grid>
        <Border BorderBrush="Black" 
                BorderThickness="4" 
                HorizontalAlignment="Center" 
                Height="430" 
                Margin="0,-50,0,0" 
                VerticalAlignment="Center" 
                Width="160" Background="#FF524F4F"/>
        <Ellipse HorizontalAlignment="Center" 
                 VerticalAlignment="Center" 
                 Margin="0,200,0,0" 
                 Height="110" 
                 Width="100"
                 Stroke="Black"
                 StrokeThickness ="3"
                 Fill="Black"/>
        <Ellipse 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     Margin="0,210,0,0" 
                     Height="100" 
                     Width="100"
                     Stroke="Black"
                     StrokeThickness ="2"
                     Fill="Green"/>
        <Ellipse Name="GreenLight"
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     Margin="0,210,0,0" 
                     Height="100" 
                     Width="100"
                     Stroke="Black"
                     StrokeThickness ="2"
                     Fill="Gray"
                     Opacity="100"/>
        
        <Ellipse HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Margin="0,-50,0,0" 
                Height="110" 
                Width="100"
                Stroke="Black"
                StrokeThickness ="3"
                Fill="Black"/>
        <Ellipse 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     Margin="0,-40,0,0" 
                     Height="100" 
                     Width="100"
                     Stroke="Black"
                     StrokeThickness ="2"
                     Fill="Yellow"/>
        <Ellipse Name="YellowLight" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     Margin="0,-40,0,0" 
                     Height="100" 
                     Width="100"
                     Stroke="Black"
                     StrokeThickness ="2"
                     Fill="Gray"
                     Opacity ="100"/>
        
        <Ellipse HorizontalAlignment="Center" 
                 VerticalAlignment="Center" 
                 Margin="0,-300,0,0" 
                 Height="110" 
                 Width="100"
                 Stroke="Black"
                 StrokeThickness ="3"
                 Fill="Black"/>
        <Ellipse 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     Margin="0,-290,0,0" 
                     Height="100" 
                     Width="100"
                     Stroke="Black"
                     StrokeThickness ="2"
                     Fill="Red"/>
        <Ellipse Name="RedLight" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     Margin="0,-290,0,0" 
                     Height="100" 
                     Width="100"
                     Stroke="Black"
                     StrokeThickness ="2"
                     Fill="Gray"
                     Opacity="100"/>

        <Button Content="Next" 
                HorizontalAlignment="Center" 
                Margin="0,485,0,0" 
                VerticalAlignment="Center" 
                Height="30" 
                Width="120"                
                Click="Button_Click"
                />


    </Grid>
</Window>
