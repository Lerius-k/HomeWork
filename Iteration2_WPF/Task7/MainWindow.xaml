<Window x:Class="Task7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task7"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="400">
    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>                                
                            </Grid.RowDefinitions>
                            <Rectangle Height="20" Width="20" RadiusX="3" RadiusY="3" Stroke="DarkGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Ellipse  x:Name="Null" Height="10" Width="10" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0"/>
                            <ContentControl x:Name="Checked" Content="X" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0"/>
                            <ContentPresenter Grid.Row="1" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Checked" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="{x:Null}">
                                <Setter TargetName="Null" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <CheckBox VerticalAlignment="Center" HorizontalAlignment="Center"
                  IsChecked="{x:Null}"
                  Content="Не определено"
                  IsThreeState="True"/>
        <CheckBox VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"
                  IsChecked="True"
                  Content="Выбрано"
                  IsThreeState="True"/>
        <CheckBox VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2"
                  IsChecked="False"
                  Content="Не выбрано"
                  IsThreeState="True"/>
    </Grid>
</Window>
